{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug so_long",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/so_long",
          "args": ["map_file/map_test.ber"],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": false, 
          "MIMode": "gdb",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ]
      }
  ]
}